@using System.Web.UI.WebControls
@model DEEPLAID.Models.Master.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="row">
    <div class="container">
        <div class="jumbotron" style="background-color: lightblue">
            <h1>DEEPLAID</h1>
            <h3>Sales & Inventory Management Systems</h3>
            <h3 style="color: coral">Log In</h3>
            <div class="container" style="margin-top: 10px;margin-left: 50px">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "Login failed. Login Id name or Password incorrect!");
                    <div>
                        <fieldset>
                            <div class="row form-group">
                                @Html.LabelFor(model => model.LoginId, new { @class = "control-label col-md-2", @style = "text-align:right;" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.LoginId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LoginId)
                                </div>
                            </div>

                            <div class="row form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2", @style = "text-align: right" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                            </div>

                            <div class="col-lg-3" style="text-align: right">
                                <input type="submit" value="Log In" class="btn btn-primary" style="text-align: right" />
                            </div>
                            <br />
                        </fieldset>
                    </div>
                }
            </div>
        </div>
    </div>
</div>